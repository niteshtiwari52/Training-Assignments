<!-- Views/Dashboard/Index.cshtml -->
@{
    ViewData["Title"] = "Dashboard";
    Layout = "_Layout";
}

<div class="container-fluid">
    <!-- Page Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="page-title">
                <i class="fas fa-tachometer-alt me-3"></i>Dashboard
            </h1>
            <p class="text-muted mb-0">Welcome back, @User.Identity.Name! Here's what's happening with your store.</p>
        </div>
        <div>
            <span class="badge bg-primary fs-6 px-3 py-2">
                <i class="fas fa-calendar-day me-2"></i>@DateTime.Now.ToString("MMM dd, yyyy")
            </span>
        </div>
    </div>

    <!-- Statistics Cards -->
    <div class="row g-4 mb-5">
        <div class="col-xl-3 col-md-6">
            <div class="card stats-card primary h-100">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-grow-1">
                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                Total Users
                            </div>
                            <div class="h4 mb-0 font-weight-bold text-gray-800">
                                @ViewBag.TotalUsers
                            </div>
                            @* <div class="mt-2">
                                <span class="text-success me-2">
                                    <i class="fas fa-arrow-up"></i> 12%
                                </span>
                                <span class="text-muted small">from last month</span>
                            </div> *@
                        </div>
                        <div class="text-primary">
                            <i class="fas fa-users fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6">
            <div class="card stats-card success h-100">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-grow-1">
                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                Total Products
                            </div>
                            <div class="h4 mb-0 font-weight-bold text-gray-800">
                                @ViewBag.TotalProducts
                            </div>
                            @* <div class="mt-2">
                                <span class="text-success me-2">
                                    <i class="fas fa-arrow-up"></i> 8%
                                </span>
                                <span class="text-muted small">from last month</span>
                            </div> *@
                        </div>
                        <div class="text-success">
                            <i class="fas fa-box fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6">
            <div class="card stats-card warning h-100">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-grow-1">
                            <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                                Total Orders
                            </div>
                            <div class="h4 mb-0 font-weight-bold text-gray-800">
                                @ViewBag.MonthlyTotalOrders
                            </div>
                            @* <div class="mt-2">
                                <span class="text-warning me-2">
                                    <i class="fas fa-arrow-down"></i> 3%
                                </span>
                                <span class="text-muted small">from last month</span>
                            </div> *@
                        </div>
                        <div class="text-warning">
                            <i class="fas fa-shopping-cart fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6">
            <div class="card stats-card info h-100">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-grow-1">
                            <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                                Revenue
                            </div>
                            <div class="h4 mb-0 font-weight-bold text-gray-800">
                                ₹@ViewBag.MonthlyRevenue
                            </div>
                            @* <div class="mt-2">
                                <span class="text-success me-2">
                                    <i class="fas fa-arrow-up"></i> 15%
                                </span>
                                <span class="text-muted small">from last month</span>
                            </div> *@
                        </div>
                        <div class="text-info">
                            <i class="fas fa-rupee-sign fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-4">
        <!-- Recent Users -->
        <div class="col-lg-6">
            <div class="card h-100">
                <div class="card-header bg-gradient bg-primary text-white d-flex align-items-center justify-content-between">
                    <div>
                        <h5 class="card-title mb-0">
                            <i class="fas fa-users me-2"></i>Recent Users
                        </h5>
                        <small class="opacity-75">Latest user registrations</small>
                    </div>
                    <a href="@Url.Action("Index", "UserManagement")" class="btn btn-light btn-sm">
                        <i class="fas fa-eye me-1"></i>View All
                    </a>
                </div>
                <div class="card-body p-0">
                    @if (ViewBag.RecentUsers != null && ((IEnumerable<dynamic>)ViewBag.RecentUsers).Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th class="border-0">User</th>
                                        <th class="border-0">Email</th>
                                        <th class="border-0">Status</th>
                                        <th class="border-0">Joined</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var user in (IEnumerable<dynamic>)ViewBag.RecentUsers)
                                    {
                                        <tr>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <div class="avatar-sm bg-primary rounded-circle d-flex align-items-center justify-content-center me-3">
                                                        <i class="fas fa-user text-white"></i>
                                                    </div>
                                                    <div>
                                                        <div class="fw-semibold">@user.FullName</div>
                                                        <div class="text-muted small">@string.Join(", ", user.Roles)</div>
                                                    </div>
                                                </div>
                                            </td>
                                            <td class="text-muted">@user.Email</td>
                                            <td>
                                                <span class="badge @(user.IsActive ? "bg-success" : "bg-danger")">
                                                    <i class="fas @(user.IsActive ? "fa-check" : "fa-times") me-1"></i>
                                                    @(user.IsActive ? "Active" : "Inactive")
                                                </span>
                                            </td>
                                            <td class="text-muted small">@user.CreatedAt.ToString("MMM dd")</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="p-4 text-center text-muted">
                            <i class="fas fa-users fa-3x mb-3 opacity-25"></i>
                            <p class="mb-0">No users found</p>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Recent Products -->
        <div class="col-lg-6">
            <div class="card h-100">
                <div class="card-header bg-gradient bg-success text-white d-flex align-items-center justify-content-between">
                    <div>
                        <h5 class="card-title mb-0">
                            <i class="fas fa-box me-2"></i>Recent Products
                        </h5>
                        <small class="opacity-75">Latest added products</small>
                    </div>
                    <a href="@Url.Action("Index", "ProductManagement")" class="btn btn-light btn-sm">
                        <i class="fas fa-eye me-1"></i>View All
                    </a>
                </div>
                <div class="card-body p-0">
                    @if (ViewBag.RecentProducts != null && ((IEnumerable<dynamic>)ViewBag.RecentProducts).Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th class="border-0">Product</th>
                                        <th class="border-0">Category</th>
                                        <th class="border-0">Price</th>
                                        <th class="border-0">Stock</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var product in (IEnumerable<dynamic>)ViewBag.RecentProducts)
                                    {
                                        <tr>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <div class="product-image me-3">
                                                        @if (!string.IsNullOrEmpty(product.ImagePath))
                                                        {
                                                            <img src="@product.ImagePath" alt="@product.Name"
                                                                 class="rounded" style="width: 40px; height: 40px; object-fit: cover;">
                                                        }
                                                        else
                                                        {
                                                            <div class="bg-secondary rounded d-flex align-items-center justify-content-center"
                                                                 style="width: 40px; height: 40px;">
                                                                <i class="fas fa-image text-white"></i>
                                                            </div>
                                                        }
                                                    </div>
                                                    <div>
                                                        <div class="fw-semibold">@product.Name</div>
                                                        <div class="text-muted small">Added @product.CreatedAt.ToString("MMM dd")</div>
                                                    </div>
                                                </div>
                                            </td>
                                            <td>
                                                <span class="badge bg-light text-dark">@product.CategoryName</span>
                                            </td>
                                            <td class="fw-semibold text-success">₹@product.Price.ToString("N2")</td>
                                            <td>
                                                <span class="badge @(product.StockQuantity > 10 ? "bg-success" : product.StockQuantity > 5 ? "bg-warning" : "bg-danger")">
                                                    @product.StockQuantity
                                                </span>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="p-4 text-center text-muted">
                            <i class="fas fa-box fa-3x mb-3 opacity-25"></i>
                            <p class="mb-0">No products found</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Actions -->
    <div class="row g-4 mt-4">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-gradient bg-dark text-white">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-bolt me-2"></i>Quick Actions
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row g-3">
                        <div class="col-md-4 col-sm-6">
                            <a href="@Url.Action("Create", "UserManagement")" class="btn btn-outline-primary w-100 p-3">
                                <i class="fas fa-user-plus fa-2x mb-2 d-block"></i>
                                <div class="fw-semibold">Add User</div>
                                <small class="text-muted">Create new user account</small>
                            </a>
                        </div>
                        <div class="col-md-4 col-sm-6">
                            <a href="@Url.Action("Create", "ProductManagement")" class="btn btn-outline-success w-100 p-3">
                                <i class="fas fa-plus fa-2x mb-2 d-block"></i>
                                <div class="fw-semibold">Add Product</div>
                                <small class="text-muted">Add new product to catalog</small>
                            </a>
                        </div>
                        <div class="col-md-4 col-sm-6">
                            <a href="@Url.Action("Index", "SalesReport")" class="btn btn-outline-warning w-100 p-3">
                                <i class="fas fa-chart-bar fa-2x mb-2 d-block"></i>
                                <div class="fw-semibold">View Reports</div>
                                <small class="text-muted">Sales and analytics</small>
                            </a>
                        </div>
                        
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Add some interactive effects
        document.addEventListener('DOMContentLoaded', function() {
            // Animate stats cards on load
            const statsCards = document.querySelectorAll('.stats-card');
            statsCards.forEach((card, index) => {
                setTimeout(() => {
                    card.style.opacity = '0';
                    card.style.transform = 'translateY(20px)';
                    card.style.transition = 'all 0.5s ease';

                    setTimeout(() => {
                        card.style.opacity = '1';
                        card.style.transform = 'translateY(0)';
                    }, 100);
                }, index * 100);
            });

            // Refresh page data every 30 seconds
            setInterval(() => {
                // You can implement auto-refresh logic here
                console.log('Auto-refresh triggered');
            }, 30000);
        });
    </script>
}