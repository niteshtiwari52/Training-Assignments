<!-- Views/CouponManagement/Details.cshtml -->
@model ShopForHome.ViewModels.CouponDetailsViewModel
@{
    ViewData["Title"] = "Coupon Details";
    Layout = "_Layout";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="page-title">
                <i class="fas fa-tag me-3"></i>Coupon Details
            </h1>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index", "Dashboard")">Dashboard</a></li>
                    <li class="breadcrumb-item"><a href="@Url.Action("Index", "CouponManagement")">Coupons</a></li>
                    <li class="breadcrumb-item active">@Model.Code</li>
                </ol>
            </nav>
        </div>
        <div class="btn-group">
            <a href="@Url.Action("Edit", new { id = Model.CouponId })" class="btn btn-primary">
                <i class="fas fa-edit me-2"></i>Edit Coupon
            </a>
            @if (!Model.IsPublic)
            {
                <a href="@Url.Action("AssignUsers", new { id = Model.CouponId })" class="btn btn-info">
                    <i class="fas fa-users me-2"></i>Assign Users
                </a>
            }
            <a href="@Url.Action("Index")" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left me-2"></i>Back
            </a>
        </div>
    </div>

    <div class="row g-4">
        <!-- Left Column - Coupon Info -->
        <div class="col-lg-5">
            <div class="card">
                <div class="card-body text-center">
                    <div class="mb-4">
                        <div class="bg-primary rounded-circle d-inline-flex align-items-center justify-content-center mb-3"
                             style="width: 80px; height: 80px;">
                            <i class="fas fa-tag fa-2x text-white"></i>
                        </div>
                        <h2 class="text-primary mb-2">@Model.Code</h2>
                        <div class="mb-3">
                            <span class="badge @(Model.IsActive ? "bg-success" : "bg-secondary") fs-6 px-3 py-2">
                                <i class="fas @(Model.IsActive ? "fa-check" : "fa-times") me-2"></i>
                                @(Model.IsActive ? "Active" : "Inactive")
                            </span>
                            <span class="badge @(Model.IsPublic ? "bg-primary" : "bg-info") fs-6 px-3 py-2 ms-2">
                                <i class="fas @(Model.IsPublic ? "fa-globe" : "fa-user") me-2"></i>
                                @(Model.IsPublic ? "Public" : "Private")
                            </span>
                        </div>
                        <h3 class="text-success">@Model.DiscountPercent% OFF</h3>
                    </div>
                </div>
            </div>

            <!-- Usage Statistics -->
            <div class="card mt-4">
                <div class="card-header">
                    <h6 class="card-title mb-0">
                        <i class="fas fa-chart-bar me-2"></i>Usage Statistics
                    </h6>
                </div>
                <div class="card-body">
                    <div class="row g-3 text-center">
                        <div class="col-6">
                            <div class="fs-4 fw-bold text-primary">@Model.TotalUsed</div>
                            <small class="text-muted">Times Used</small>
                        </div>
                        <div class="col-6">
                            <div class="fs-4 fw-bold text-info">@Model.RemainingUses</div>
                            <small class="text-muted">Remaining</small>
                        </div>
                        <div class="col-12">
                            <div class="progress mt-2" style="height: 8px;">
                                <div class="progress-bar bg-primary" role="progressbar"
                                     style="width: @Model.UsagePercentage.ToString("N1")%"></div>
                            </div>
                            <small class="text-muted">@Model.UsagePercentage.ToString("N1")% Used</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Right Column - Details -->
        <div class="col-lg-7">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-info-circle me-2"></i>Coupon Information
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label class="form-label text-muted">Coupon Code</label>
                            <div class="fw-semibold fs-5">@Model.Code</div>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label text-muted">Discount</label>
                            <div class="fw-semibold fs-5 text-success">@Model.DiscountPercent%</div>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label text-muted">Type</label>
                            <div class="fw-semibold fs-5">@(Model.IsPublic ? "Public" : "Private")</div>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label text-muted">Status</label>
                            <div class="fw-semibold fs-5">@(Model.IsActive ? "Active" : "Inactive")</div>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label text-muted">Valid From</label>
                            <div class="fw-semibold">@Model.ValidFrom.ToString("MMMM dd, yyyy")</div>
                            <small class="text-muted">@Model.ValidFrom.ToString("hh:mm tt")</small>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label text-muted">Valid To</label>
                            <div class="fw-semibold">@Model.ValidTo.ToString("MMMM dd, yyyy")</div>
                            <small class="text-muted">@Model.ValidTo.ToString("hh:mm tt")</small>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label text-muted">Maximum Uses</label>
                            <div class="fw-semibold fs-5">@Model.MaxUses</div>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label text-muted">Total Used</label>
                            <div class="fw-semibold fs-5">@Model.TotalUsed</div>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label text-muted">Created By</label>
                            <div class="fw-semibold">@Model.CreatedBy</div>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label text-muted">Created Date</label>
                            <div class="fw-semibold">@Model.CreatedAt.ToString("MMMM dd, yyyy")</div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Assigned Users (for private coupons) -->
            @if (!Model.IsPublic && Model.AssignedUsers.Any())
            {
                <div class="card mt-4">
                    <div class="card-header">
                        <h6 class="card-title mb-0">
                            <i class="fas fa-users me-2"></i>Assigned Users (@Model.AssignedUsers.Count)
                        </h6>
                    </div>
                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th>User</th>
                                        <th>Email</th>
                                        <th>Status</th>
                                        <th>Assigned Date</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var user in Model.AssignedUsers)
                                    {
                                        <tr>
                                            <td class="fw-semibold">@user.UserName</td>
                                            <td>@user.Email</td>
                                            <td>
                                                <span class="badge @(user.IsUsed ? "bg-success" : "bg-warning")">
                                                    @(user.IsUsed ? "Used" : "Available")
                                                </span>
                                            </td>
                                            <td class="text-muted">@user.AssignedDate.ToString("MMM dd, yyyy")</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>