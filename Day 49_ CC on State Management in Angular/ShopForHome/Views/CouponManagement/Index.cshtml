<!-- Views/CouponManagement/Index.cshtml -->
@model ShopForHome.ViewModels.PagedResult<ShopForHome.ViewModels.CouponViewModel>
@{
    ViewData["Title"] = "Coupon Management";
    Layout = "_Layout";
}

<div class="container-fluid">
    <!-- Page Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="page-title">
                <i class="fas fa-tags me-3"></i>Coupon Management
            </h1>
            <p class="text-muted mb-0">Manage discount coupons and promotional offers</p>
        </div>
        <div>
            <a href="@Url.Action("Create")" class="btn btn-primary">
                <i class="fas fa-plus me-2"></i>Create Coupon
            </a>
        </div>
    </div>

    <!-- Statistics Row -->
    <div class="row g-4 mb-4">
        <div class="col-md-3">
            <div class="card stats-card primary">
                <div class="card-body text-center">
                    <i class="fas fa-tags fa-2x text-primary mb-2"></i>
                    <h4 class="mb-1">@Model.TotalCount</h4>
                    <small class="text-muted">Total Coupons</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card stats-card success">
                <div class="card-body text-center">
                    <i class="fas fa-check-circle fa-2x text-success mb-2"></i>
                    <h4 class="mb-1">@Model.Items.Count(c => c.IsActive)</h4>
                    <small class="text-muted">Active Coupons</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card stats-card info">
                <div class="card-body text-center">
                    <i class="fas fa-globe fa-2x text-info mb-2"></i>
                    <h4 class="mb-1">@Model.Items.Count(c => c.IsPublic)</h4>
                    <small class="text-muted">Public Coupons</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card stats-card warning">
                <div class="card-body text-center">
                    <i class="fas fa-users fa-2x text-warning mb-2"></i>
                    <h4 class="mb-1">@Model.Items.Where(c => !c.IsPublic).Sum(c => c.AssignedUsersCount)</h4>
                    <small class="text-muted">User Assignments</small>
                </div>
            </div>
        </div>
    </div>

    <!-- Coupons Table -->
    <div class="card">
        <div class="card-header bg-white">
            <div class="row align-items-center">
                <div class="col">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-list me-2"></i>All Coupons
                    </h5>
                </div>
                <div class="col-auto">
                    <div class="input-group">
                        <span class="input-group-text"><i class="fas fa-search"></i></span>
                        <input type="text" class="form-control" placeholder="Search coupons..." id="searchInput">
                    </div>
                </div>
            </div>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0 data-table">
                    <thead>
                        <tr>
                            <th>Coupon Details</th>
                            <th>Discount</th>
                            <th>Type</th>
                            <th>Validity</th>
                            <th>Usage</th>
                            <th>Status</th>
                            <th>Created</th>
                            <th class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var coupon in Model.Items)
                        {
                            <tr>
                                <td>
                                    <div>
                                        <div class="fw-bold fs-6">@coupon.Code</div>
                                        <small class="text-muted">Created by @coupon.CreatedBy</small>
                                    </div>
                                </td>
                                <td>
                                    <span class="badge bg-success fs-6">@coupon.DiscountPercent%</span>
                                </td>
                                <td>
                                    <span class="badge @(coupon.IsPublic ? "bg-primary" : "bg-info")">
                                        <i class="fas @(coupon.IsPublic ? "fa-globe" : "fa-user") me-1"></i>
                                        @(coupon.IsPublic ? "Public" : "Private")
                                    </span>
                                </td>
                                <td>
                                    <div>
                                        <small class="text-muted d-block">From: @coupon.ValidFrom.ToString("MMM dd, yyyy")</small>
                                        <small class="text-muted">To: @coupon.ValidTo.ToString("MMM dd, yyyy")</small>
                                    </div>
                                </td>
                                <td>
                                    <div class="progress mb-1" style="height: 8px;">
                                        <div class="progress-bar bg-info" role="progressbar"
                                             style="width: @(coupon.MaxUses > 0 ? (coupon.TotalUsed * 100 / coupon.MaxUses) : 0)%">
                                        </div>
                                    </div>
                                    <small class="text-muted">@coupon.TotalUsed / @coupon.MaxUses used</small>
                                </td>
                                <td>
                                    <span class="badge @coupon.StatusBadgeClass">
                                        <i class="fas @(coupon.IsActive ? "fa-check" : "fa-times") me-1"></i>
                                        @(coupon.IsActive ? "Active" : "Inactive")
                                    </span>
                                </td>
                                <td>
                                    <span class="text-muted">@coupon.CreatedAt.ToString("MMM dd, yyyy")</span>
                                </td>
                                <td class="text-center">
                                    <div class="btn-group btn-group-sm" role="group">
                                        <a href="@Url.Action("Details", new { id = coupon.CouponId })"
                                           class="btn btn-outline-info" title="View Details">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        @if (!coupon.IsPublic)
                                        {
                                            <a href="@Url.Action("AssignUsers", new { id = coupon.CouponId })"
                                               class="btn btn-outline-primary" title="Assign Users">
                                                <i class="fas fa-users"></i>
                                            </a>
                                        }
                                        <a href="@Url.Action("Edit", new { id = coupon.CouponId })"
                                           class="btn btn-outline-primary" title="Edit">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <button type="button" class="btn btn-outline-danger"
                                                onclick="confirmDelete(@coupon.CouponId, '@coupon.Code')" title="Delete">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

        <!-- Pagination -->
        @if (Model.TotalPages > 1)
        {
            <div class="card-footer bg-white">
                <nav aria-label="Coupons pagination">
                    <ul class="pagination justify-content-center mb-0">
                        <li class="page-item @(Model.PageNumber <= 1 ? "disabled" : "")">
                            <a class="page-link" href="@Url.Action("Index", new { page = Model.PageNumber - 1, pageSize = Model.PageSize })">
                                <i class="fas fa-chevron-left me-1"></i>Previous
                            </a>
                        </li>

                        @for (int i = Math.Max(1, Model.PageNumber - 2); i <= Math.Min(Model.TotalPages, Model.PageNumber + 2); i++)
                        {
                            <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                                <a class="page-link" href="@Url.Action("Index", new { page = i, pageSize = Model.PageSize })">@i</a>
                            </li>
                        }

                        <li class="page-item @(Model.PageNumber >= Model.TotalPages ? "disabled" : "")">
                            <a class="page-link" href="@Url.Action("Index", new { page = Model.PageNumber + 1, pageSize = Model.PageSize })">
                                Next<i class="fas fa-chevron-right ms-1"></i>
                            </a>
                        </li>
                    </ul>
                </nav>
            </div>
        }
    </div>
</div>

<!-- Delete Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">
                    <i class="fas fa-exclamation-triangle text-warning me-2"></i>Confirm Delete
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete the coupon <strong id="deleteCouponCode"></strong>?</p>
                <p class="text-muted mb-0">This action cannot be undone.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <form id="deleteForm" method="post" class="d-inline">
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-trash me-2"></i>Delete Coupon
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function confirmDelete(couponId, couponCode) {
            document.getElementById('deleteCouponCode').textContent = couponCode;
            document.getElementById('deleteForm').action = '@Url.Action("Delete")/' + couponId;
            new bootstrap.Modal(document.getElementById('deleteModal')).show();
        }

        document.getElementById('searchInput').addEventListener('keyup', function(e) {
            const searchTerm = e.target.value.toLowerCase();
            const tableRows = document.querySelectorAll('.data-table tbody tr');

            tableRows.forEach(row => {
                const text = row.textContent.toLowerCase();
                row.style.display = text.includes(searchTerm) ? '' : 'none';
            });
        });
    </script>
}