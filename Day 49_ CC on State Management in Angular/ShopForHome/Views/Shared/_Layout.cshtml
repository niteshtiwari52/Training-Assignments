<!-- Views/Shared/_Layout.cshtml -->

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ShopForHome Admin</title>

    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <!-- DataTables CSS -->
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/dataTables.bootstrap5.min.css">

    <style>
        :root {
            --primary-color: #6f42c1;
            --secondary-color: #6c757d;
            --success-color: #198754;
            --info-color: #0dcaf0;
            --warning-color: #ffc107;
            --danger-color: #dc3545;
            --light-color: #f8f9fa;
            --dark-color: #212529;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f8f9fa;
        }

        .sidebar {
            position: fixed;
            top: 0;
            bottom: 0;
            left: 0;
            z-index: 100;
            padding: 48px 0 0;
            box-shadow: inset -1px 0 0 rgba(0, 0, 0, .1);
            background: linear-gradient(135deg, var(--primary-color) 0%, #8e44ad 100%);
            width: 250px;
        }

        .sidebar .nav-link {
            color: rgba(255, 255, 255, 0.8);
            padding: 10px 20px;
            margin: 2px 10px;
            border-radius: 8px;
            transition: all 0.3s ease;
        }

        .sidebar .nav-link:hover,
        .sidebar .nav-link.active {
            background-color: rgba(255, 255, 255, 0.1);
            color: white;
            transform: translateX(5px);
        }

        .navbar-brand {
            font-weight: bold;
            background: linear-gradient(135deg, var(--primary-color) 0%, #8e44ad 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

        .main-content {
            margin-left: 250px;
            padding: 20px;
            margin-top: 60px;
        }

        .card {
            border: none;
            border-radius: 15px;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.08);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

        .card:hover {
            transform: translateY(-2px);
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.12);
        }

        .btn-primary {
            background: linear-gradient(135deg, var(--primary-color) 0%, #8e44ad 100%);
            border: none;
            border-radius: 25px;
            padding: 10px 25px;
            font-weight: 500;
            transition: all 0.3s ease;
        }

        .btn-primary:hover {
            background: linear-gradient(135deg, #8e44ad 0%, var(--primary-color) 100%);
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(111, 66, 193, 0.4);
        }

        .table {
            border-radius: 10px;
            overflow: hidden;
        }

        .table thead th {
            background: linear-gradient(135deg, var(--primary-color) 0%, #8e44ad 100%);
            color: white;
            border: none;
            font-weight: 500;
        }

        .badge {
            border-radius: 20px;
            padding: 5px 12px;
        }

        .alert {
            border: none;
            border-radius: 10px;
            padding: 15px 20px;
        }

        .form-control:focus {
            border-color: var(--primary-color);
            box-shadow: 0 0 0 0.2rem rgba(111, 66, 193, 0.25);
        }

        .page-title {
            color: var(--dark-color);
            font-weight: 600;
            margin-bottom: 30px;
        }

        .stats-card {
            border-left: 4px solid;
            border-radius: 0 10px 10px 0;
        }

        .stats-card.primary {
            border-left-color: var(--primary-color);
        }

        .stats-card.success {
            border-left-color: var(--success-color);
        }

        .stats-card.info {
            border-left-color: var(--info-color);
        }

        .stats-card.warning {
            border-left-color: var(--warning-color);
        }

        @@media (max-width: 768px) {
            .sidebar {
                transform: translateX(-100%);
                transition: transform 0.3s ease;
            }

            .sidebar.show {
                transform: translateX(0);
            }

            .main-content {
                margin-left: 0;
                margin-top: 60px;
            }
        }
    </style>
</head>
<body>
    <!-- Top Navigation -->
    <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm fixed-top">
        <div class="container-fluid">
            <a class="navbar-brand fw-bold fs-4" href="@Url.Action("Index", "Dashboard")">
                <i class="fas fa-store me-2"></i>ShopForHome Admin
            </a>

            <div class="d-flex align-items-center">
                <div class="dropdown">
                    <button class="btn btn-outline-primary dropdown-toggle" type="button" data-bs-toggle="dropdown">
                        <i class="fas fa-user me-2"></i>@User.Identity.Name
                    </button>
                    <ul class="dropdown-menu dropdown-menu-end">
                        @* Not Implemented  *@
                        @* <li><a class="dropdown-item" href="#"><i class="fas fa-user-cog me-2"></i>Profile</a></li>
                        <li><a class="dropdown-item" href="#"><i class="fas fa-cog me-2"></i>Settings</a></li> *@
                        @* <li><hr class="dropdown-divider"></li> *@
                        <li>
                            <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                                <button type="submit" class="dropdown-item">
                                    <i class="fas fa-sign-out-alt me-2"></i>Logout
                                </button>
                            </form>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </nav>

    <!-- Sidebar -->
    <nav class="sidebar">
        <ul class="nav flex-column pt-4">
            <li class="nav-item">
                <a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Dashboard" ? "active" : "")"
                   href="@Url.Action("Index", "Dashboard")">
                    <i class="fas fa-tachometer-alt me-3"></i>Dashboard
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "UserManagement" ? "active" : "")"
                   href="@Url.Action("Index", "UserManagement")">
                    <i class="fas fa-users me-3"></i>User Management
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "ProductManagement" ? "active" : "")"
                   href="@Url.Action("Index", "ProductManagement")">
                    <i class="fas fa-box me-3"></i>Product Management
                </a>
            </li>
            @* <li class="nav-item">
                <a class="nav-link" href="#" data-bs-toggle="collapse" data-bs-target="#ordersMenu">
                    <i class="fas fa-shopping-cart me-3"></i>Orders <i class="fas fa-chevron-down ms-auto"></i>
                </a>
                <div class="collapse" id="ordersMenu">
                    <ul class="nav flex-column ps-4">
                        <li class="nav-item">
                            <a class="nav-link py-1" href="#"><i class="fas fa-list me-2"></i>All Orders</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link py-1" href="#"><i class="fas fa-clock me-2"></i>Pending</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link py-1" href="#"><i class="fas fa-check me-2"></i>Completed</a>
                        </li>
                    </ul>
                </div>
            </li> *@
            <li class="nav-item @(ViewContext.RouteData.Values["Controller"]?.ToString() == "SalesReport" ? "active" : "")">
                <a class="nav-link" href="@Url.Action("Index", "SalesReport")">
                    <i class="fas fa-chart-bar me-3"></i>Reports
                </a>
            </li>
            <li class="nav-item @(ViewContext.RouteData.Values["Controller"]?.ToString() == "CouponManagement" ? "active" : "")">
                <a class="nav-link" href="@Url.Action("Index", "CouponManagement")">
                    <i class="fas fa-tags me-3"></i>Coupons
                </a>
            </li>
            @* <li class="nav-item">
                <a class="nav-link" href="@Url.Content("~/swagger")" target="_blank">
                    <i class="fas fa-code me-3"></i>Swagger API Documentation
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="@Url.Content("https://documenter.getpostman.com/view/23029976/2sB3Hkqfvi")" target="_blank">
                    <i class="fas fa-code me-3"></i>Postman API Documentation
                </a>
            </li> *@
            <li class="nav-item">
                <a class="nav-link" href="#" data-bs-toggle="collapse" data-bs-target="#apiMenu">
                    <i class="fas fa-code me-3"></i>APIs <i class="fas fa-chevron-down ms-auto"></i>
                </a>
                <div class="collapse" id="apiMenu">
                    <ul class="nav flex-column ps-4">
                        <li class="nav-item">
                            <a class="nav-link py-1" href="@Url.Content("https://documenter.getpostman.com/view/23029976/2sB3Hkqfvi")" target="_blank">Postman</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link py-1" href="@Url.Content("~/swagger")" target="_blank">Swagger</a>
                        </li>
                        
                    </ul>
                </div>
            </li>
        </ul>
    </nav>

    <!-- Main Content -->
    <main class="main-content">
        <!-- Alert Messages -->
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="fas fa-exclamation-circle me-2"></i>@TempData["ErrorMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        @RenderBody()
    </main>

    <!-- Bootstrap 5 JS Bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>
    <!-- DataTables JS -->
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap5.min.js"></script>

